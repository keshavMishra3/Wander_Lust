<% layout("./layout/boilerPlate") -%>
<body>
  <div class="row row-cols-lg-3 mt-3 row-cols-md-2 row-cols-sm-1">
       <%for(listing of allListings){%>
        <a  href="/listings/<%=listing._id%>" style="text-decoration: none;">
            <div class="card listing-card col" style="margin:2rem">
                <img src="<%=listing.image.url%>" style="height:20rem;" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">
                        <b><%=listing.title%></b>
                        <br>
                        &#8377; <%=listing.price.toLocaleString("en-IN")%>/night
                        <i class="tax-info">&nbsp;+&nbsp;18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <%}%>
</div>
</body>